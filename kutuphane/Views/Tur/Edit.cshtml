@model kutuphane.Models.Tur

@{
    ViewData["Title"] = "Tür Düzenle";
}

<div class="container mt-4">
    <h2>Tür Düzenle</h2>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="turNo" />
                
                <div class="mb-3">
                    <label asp-for="turAciklama" class="form-label"></label>
                    <input asp-for="turAciklama" class="form-control" />
                    <span asp-validation-for="turAciklama" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
