@model IEnumerable<kutuphane.Models.Kitap>

@{
    ViewData["Title"] = "Kitaplar";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Kitaplar</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Yeni Kitap Ekle
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.kitapNo)</th>
                    <th>@Html.DisplayNameFor(model => model.kitapAdi)</th>
                    <th>@Html.DisplayNameFor(model => model.ISBNNo)</th>
                    <th>@Html.DisplayNameFor(model => model.sayfaSayisi)</th>
                    <th>Türler</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.kitapNo)</td>
                        <td>@Html.DisplayFor(modelItem => item.kitapAdi)</td>
                        <td>@Html.DisplayFor(modelItem => item.ISBNNo)</td>
                        <td>@Html.DisplayFor(modelItem => item.sayfaSayisi)</td>
                        <td>
                            @if (item.KitapTurler != null && item.KitapTurler.Any())
                            {
                                @string.Join(", ", item.KitapTurler.Select(kt => kt.Tur.turAciklama))
                            }
                            else
                            {
                                <span class="text-muted">Tür yok</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.kitapNo" class="btn btn-sm btn-warning">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@item.kitapNo" class="btn btn-sm btn-danger">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
